---
import { Image } from "astro:assets";
import config from "@/config.ts";
import locale from "@/locale";
import profileImage from "@/images/profile.jpg";
const teleHtmlString = locale.intro.TELEGRAM.replace(
  "{{ telegram channel }}",
  `<a href="${config.SOCIAL.TELEGRAM}" target="_blank" class="underline decoration-wavy decoration-secondary hover:decoration-accent text-primary/70 transition-all duration-300 dark:text-white/70">telegram channel</a>`
);
---

<section
  class="container mx-auto max-w-screen-lg px-7 py-10 content-center prose lg:prose-xl prose-headings:font-space prose-headings:mt-5 prose-headings:text-dark prose-headings:font-bold lg:prose-h1:text-7xl prose-h1:mt-0 prose-heading:transition-all prose-heading:duration-300 prose-p:text-primary/50 dark:prose-p:text-white/70 prose-p:mb-0 prose-p:transition-all prose-p:duration-300 prose-img:mt-0 prose-img:mb-0 dark:prose-headings:text-white"
>
  <div class="flex flex-wrap-reverse md:flex-nowrap">
    <div class="flex flex-col md:mr-10">
      <h2>
        <span class="gradient-underline">
          <span>{locale.intro.INTRO.TITLE} &#128075;</span>
        </span>
      </h2>
      <div
        class="text-[14px] md:text-[18px] text-primary/70 transition-all duration-300 dark:text-white/70"
      >
        <span>
          {locale.intro.INTRO.DESCRIPTION1}
          {locale.intro.INTRO.DESCRIPTION2}
        </span>
        <br />
        <span set:html={teleHtmlString} />
      </div>
    </div>
    <Image
      src={profileImage}
      alt={config.AUTHOR}
      width={800}
      loading="eager"
      decoding="sync"
      class="relative flex-grow rounded-2xl image-shine md:max-w-[300px]"
    />
  </div>
</section>
<hr class="gradient-line border-0 w-full h-[2px] overflow-hidden" />
